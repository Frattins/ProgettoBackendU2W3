@model IEnumerable<ProgettoBackendU2W3.Models.Order>

@{
    ViewData["Title"] = "Gestione Ordini";
}

<h2>Gestione Ordini</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Utente</th>
            <th>Data Ordine</th>
            <th>Totale</th>
            <th>Stato</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalCost €</td>
                <td>@(order.IsCompleted ? "Evaso" : "In attesa")</td>
                <td>
                    @if (!order.IsCompleted)
                    {
                        <form asp-action="MarkOrderAsCompleted" method="post">
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-success">Segna come Evaso</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
