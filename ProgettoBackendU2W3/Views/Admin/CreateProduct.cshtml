@model ProgettoBackendU2W3.Models.Product

@{
    ViewData["Title"] = "Crea Prodotto";
}

<h1>Crea Prodotto</h1>

<h4>Product</h4>
<hr />
<form asp-action="CreateProduct">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DeliveryTime" class="control-label"></label>
        <input asp-for="DeliveryTime" class="form-control" />
        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoUrl" class="control-label"></label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Ingredienti</label>
        <select asp-for="ProductIngredients" class="form-control" multiple asp-items="ViewBag.Ingredients"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salva</button>
    </div>
    <div>
        <a asp-action="Index">Torna all'elenco</a>
    </div>
</form>
