@model ProgettoBackendU2W3.Models.Cart

<h2>Checkout</h2>

<form asp-action="PlaceOrder" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="shippingAddress">Indirizzo di spedizione</label>
        <input type="text" id="shippingAddress" name="shippingAddress" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="notes">Note</label>
        <textarea id="notes" name="notes" class="form-control"></textarea>
    </div>
    <h3>Riepilogo ordine</h3>
    @foreach (var item in Model.Items)
    {
        <p>@item.Product.Name - Quantità: @item.Quantity - Prezzo: @((item.Quantity * item.Product.Price).ToString("C"))</p>
    }
    <p><strong>Totale: @Model.TotalPrice.ToString("C")</strong></p>
    <button type="submit" class="btn btn-primary">Conferma ordine</button>
</form>